@model Page5ViewModel
@{
    ViewBag.Title = "Page 5";
}

<div class="container-fluid">

    <h1 class="text-center">PCA Course</h1>
    <form asp-controller="Application" asp-action="Page5" method="post" enctype="multipart/form-data">


        <a href="http://shopping.positivecoach.org/Double-Goal-Coach?search=Course">Click here to take the PCA Course.</a>
        <div style="margin-top:15px">
            <p>
                <!--RENDER VOUCHER FROM CONTEXT-->
                <strong>Voucher Code: EmeraldKidSports16</strong>
        </div>
        <div class="row" style="margin: 20px 0px 20px 0px">
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-6">
                <div class="checkbox" style="text-align:justify">


                    <label><input type="checkbox" value=""><strong>I have completed the PCA Course.</strong></label>
                </div>
            </div>

            <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
                <label asp-for="Application.PcaSubmissionDate" class="control-label">Completion Date</label>
                <input type="date" class="form-control" placeholder="Date">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-11" style="text-align:left">
                <strong>Upload an image of your certificate of completion:</strong>
            </div>
        </div>
        <div class="row" style="margin-top:30px">
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-2">
                <input type="file" asp-for="File"
                       class="required borrowerImageFile" data-errormsg="PhotoUploadErrorMsg">

                <img id="previewHolder" alt="" style="height:20px;" />
            </div>
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-2">
                <input type="submit" name="uploadButton" class="upbtn" value="Upload" />
            </div>
        </div>


        <div class="row">
            <!-- Previous button -->
            <div class="col-xs-offset-1 col-xs-4 col-md-offset-1 col-md-4">
                <button onclick="location='/Application/Page4'" type="button" class="btn btn-success pull-left"> < Previous</button>
            </div>

            <!-- Next button -->
            <div class="col-xs-offset-2 col-xs-4 col-md-offset-3 col-md-4">
                <button onclick="location='/Application/Page6'" type="button" class="btn btn-success pull-right">Next > </button>
            </div>
        </div>

    </form>
</div>

