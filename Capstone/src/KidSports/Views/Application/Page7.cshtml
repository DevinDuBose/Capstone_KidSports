@model Page7ViewModel
@{
    ViewBag.Title = "Page 7";
}

<div class="container-fluid">

    <h1 class="text-center">Coach ID Badge</h1>
    <form asp-controller="Application" asp-action="Page7" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-10">
                Once you have completed the necessary requirements and have been approved by a KidSports Sports Manager-
                you are required to obtain your KS Coach ID Badge.
                <Strong>This card is required to be worn and visible for all games.</Strong>
            </div>
        </div>
        <div class="row" style="margin-top:20px">
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-4">
                <div style="text-align:left;">
                    <strong>Image Requirements:</strong>

                    <ul>
                        <li style="text-align:left;">Mininum 8 mega pixel resolution</li>
                        <li style="text-align:left;">No Hats or Sunglasses</li>
                        <li style="text-align:left;">An individual photo</li>

                    </ul>
                </div>
            </div>

            <div class="form-group col-xs-offset-1 col-xs-10 col-md-8">
            </div>
        </div>

        <div class="row" style="margin-top:30px">
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-2">
                <input type="file" asp-for="File"
                       class="required borrowerImageFile" data-errormsg="PhotoUploadErrorMsg">

                <img id="previewHolder" alt="" style="height:20px;" />
            </div>
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-2">
                <input type="submit" name="uploadButton" class="upbtn" value="Upload" />
            </div>
        </div>


        <div class="row">
            <!-- Previous button -->
            <div class="col-xs-offset-1 col-xs-4 col-md-offset-1 col-md-4">
                <button onclick="location='/Application/Page6'" type="button" class="btn btn-success pull-left"> < Previous</button>
            </div>

            <!-- Next button -->
            <div class="col-xs-offset-2 col-xs-4 col-md-offset-3 col-md-4">
                <button onclick="location='/Application/Appinprocess'" type="button" class="btn btn-success pull-right">Done</button>
            </div>
        </div>


    </form>
</div>