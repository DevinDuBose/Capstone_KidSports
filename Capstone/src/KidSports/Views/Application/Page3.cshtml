

@{
    ViewBag.Title = "Page 3";
}

<div class="container-fluid">

    <h1 class="text-center">The Coaches Pledge</h1><br />

    <div class="well">
        <div class="row">
            <div class="form-group col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-12">
                <p>
                    As coaches, you determine the kind of experience our athletes have playing sports. KidSports is committed to the principles of
                    Positive Coaching Alliance (PCA). KS expects you to be a "Double-Goal Coach."
                    You'll not only strive to win, but also, more importantly, pursue the goal of teaching positive life lessons through team sports.

                </p>
            </div>
        </div>
        <div>
            <a href="~/CoachEthicContract.pdf">View terms of the coaches pledge here.</a>
        </div>

        <div class="row">
            <div class="form-group col-md-offset-1 col-xs-10 col-md-11">
                <h5>I pledge to observe, practice, and uphold the KS/PCA Coaces Pledge.</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-6">
                <label class="control-label">Name<span style="color:red;">*</span></label>
                <input class="form-control">
            </div>

            <div class="col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-2">
                <label class="control-label">Initial<span style="color:red;">*</span></label>
                <input class="form-control">
            </div>

            <div class="col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-4">
                <label class="control-label">Date<span style="color:red;">*</span></label>
                <input type="date" class="form-control" placeholder="Date">
            </div>
        </div>
    </div>

   @if (User.IsInRole("SportsManager") || User.IsInRole("Admin"))
   {
    <div class="btn-group col-xs-12 col-sm-3">
        <button onclick="location='/Application/Page2'" type="button" class="btn btn-primary col-xs-12 pull-left"> <i class="fa fa-arrow-left" aria-hidden='true'></i>  Previous</button>
    </div>

       Html.RenderPartial("ApproveDeny.cshtml");

    <div class="btn-group col-xs-12 col-sm-3">
        <button onclick="location='/Application/Page4'" type="button" class="btn btn-primary col-xs-12 pull-right">Next <i class="fa fa-arrow-right" aria-hidden='true'></i>  </button>
    </div>
   }
   else
   {
        <div class="btn-group col-xs-12 col-sm-3">
            <button onclick="location='/Application/Page2'" type="button" class="btn btn-primary col-xs-12 pull-left"> <i class="fa fa-arrow-left" aria-hidden='true'></i>  Previous</button>
        </div>

        <div class="col-sm-6"></div>

        <div class="btn-group col-xs-12 col-sm-3">
            <button onclick="location='/Application/Page4'" type="button" class="btn btn-primary col-xs-12 pull-right">Next <i class="fa fa-arrow-right" aria-hidden='true'></i>  </button>
        </div>
   }


</div>


