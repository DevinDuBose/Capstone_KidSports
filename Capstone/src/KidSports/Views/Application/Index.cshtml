@model IndexViewModel

@{
    ViewBag.Title = "Home";
}

<h1>Hello, @Model.UserFirstName.</h1>

<form asp-action="Index" asp-controller="Application" method="post">
    <div class="well">
        @if (Model.ApplicationID != 0)
        {
            <input type="hidden" asp-for="@Model.ApplicationID" value="@Model.ApplicationID"/>
            <h3>
                Your application is pending completion.
                <br /> Please refer to the chart below for further information and take appropriate action.
            </h3>


            <table class="table table-responsive">
                <thead>
                    <tr><td colspan="12" style="font-weight:bold;">Application status is indicated by the colors below.</td></tr>
                    <tr>
                        <td class="bg-success col-xs-3" style="font-weight:bold;">Accepted</td>
                        <td class="bg-warning col-xs-3" style="font-weight:bold;">Pending approval</td>
                        <td class="bg-danger col-xs-3" style="font-weight:bold;">Needs to be completed</td>
                    </tr>
                </thead>
            </table>

            <div class="table-responsive">

                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td class="bg-warning"><input type="submit" style="color:black; font-weight:bold; border: 0; background: none; box-shadow:none; border-radius: 0px;" name="PageName" value="CoachInfo" /></td>
                            <td class="bg-success"><input type="submit" style="color:black; font-weight:bold; border: 0; background: none; box-shadow:none; border-radius: 0px;" name="PageName" value="CoachInterests" /></td>
                            <td class="bg-danger"><input type="submit" style="color:black; font-weight:bold; border: 0; background: none; box-shadow:none; border-radius: 0px;" name="PageName" value="CoachPledge" /></td>
                            <td class="bg-warning"><input type="submit" style="color:black; font-weight:bold; border: 0; background: none; box-shadow:none; border-radius: 0px;" name="PageName" value="ConcussionCourse" /></td>
                            <td class="bg-success"><input type="submit" style="color:black; font-weight:bold; border: 0; background: none; box-shadow:none; border-radius: 0px;" name="PageName" value="PcaCourse" /></td>
                            <td class="bg-success"><input type="submit" style="color:black; font-weight:bold; border: 0; background: none; box-shadow:none; border-radius: 0px;" name="PageName" value="ID" /></td>
                            <td class="bg-warning"><input type="submit" style="color:black; font-weight:bold; border: 0; background: none; box-shadow:none; border-radius: 0px;" name="PageName" value="Badge" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h3 class="text-center">
                You are not currently registered.<br />
                Please click here to begin or renew your application.
            </h3>


            <div class="row">
                <input type="submit" class="btn btn-success" value="Lets get started!" />
            </div>
        }

    </div>
</form>
