                            </div>
                            <div class="form-group">

                                <input type="text" asp-for="LastName" placeholder="Last Name">
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="text" asp-forr="Role" placeholder="Role">
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Area" placeholder="Area">
                            </div>

                        </div>
                        <div class="clearfix"></div>

                      <div class="modal-footer">
                      <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
        </div>
        <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">

