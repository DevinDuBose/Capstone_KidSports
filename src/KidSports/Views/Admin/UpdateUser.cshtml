@{
    ViewBag.Title = "UpdateUser";
}


<form asp-controller="Admin" asp-action="UpdateUser" method="post" encrypte="multipart/form-data">
    <div class="well">
        <h3><strong>Update Current User</strong></h3>
        <br>
        <div class="row">
            <div class="col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-3">
                <label class="control-label">Name</label>
                <input class="form-control">
            </div>

            <div class="col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-3">
                <label class="control-label">Email</label>
                <input class="form-control">
            </div>

            <div class="col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-3">
                <label class="control-label">Role</label>
                <select id="Role" class="form-control">
                    <option>User</option>
                    <option>Sports Manager</option>
                    <option>Adminstrator</option>
                </select>
            </div>
            <button type="button" class="btn btn-primary col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-2">Reset Password</button>
            <button type="button" class="btn btn-primary col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-2">Delete User</button>
      

        </div>
        

        <hr />
        <div class="row">
            <h3><strong>Add New User</strong></h3>
            <br>
            <div class="col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-3">
                <label class="control-label">Name</label>
                <input class="form-control">
            </div>

            <div class="col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-3">
                <label class="control-label">Email</label>
                <input class="form-control">
            </div>

            <div class="col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-3">
                <label class="control-label">Role</label>
                <select id="Role" class="form-control">
                    <option>User</option>
                    <option>Sports Manager</option>
                    <option>Adminstrator</option>
                </select>
            </div>
            <button type="button" class="btn btn-primary col-xs-offset-1 col-md-offset-0 col-xs-10 col-md-3">Add</button>

        </div>
    </div>
    <div class="row">
        <div class="btn-group col-xs-12 col-sm-5"></div>
        <div class="btn-group col-xs-12 col-sm-4"></div>
        <div class="btn-group col-xs-12 col-sm-3">
            <button onclick="save" type="button" class="btn btn-primary col-xs-12">Save Changes</button>
        </div>
    </div>

</form>